<resources>
    <!-- Base application theme. -->
    <style name="Theme.PetInLove" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_light_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_500</item>
        <item name="fontFamily">@font/alegreya_sans_sc_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PetInLove.Custom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_light_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_500</item>
        <item name="fontFamily">@font/alegreya_sans_sc_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomText.Bold.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alegreya_sans_sc_medium</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="CustomText.Bold.SubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:fontFamily">@font/alegreya_sans_sc_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>

    <style name="CustomText.Bold.TextField" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="CustomText.Bold.Title_Card" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="CustomText.Bold.SubTitle_Card" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black_88</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>
</resources>