            app:destination="@id/commentFragment" />
        <action
            android:id="@+id/action_profileUserFragment_to_savedPostsFragment"
            app:destination="@id/savedPostsFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.raveline.petinlove.presentation.fragments.PostDetailFragment"
        android:label="PostDetailFragment"
        tools:layout="@layout/fragment_post_detail">
        <action
            android:id="@+id/action_postDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_postDetailFragment_to_profileUserFragment"
            app:destination="@id/profileUserFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <argument
            android:name="selectedPost"
            app:argType="com.raveline.petinlove.data.model.PostModel" />
        <argument
            android:name="userId"
            app:argType="string" />
        <action
            android:id="@+id/action_postDetailFragment_to_commentFragment"
            app:destination="@id/commentFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
